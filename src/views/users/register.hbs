<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                <h3>Register</h3>
            </div>
            <div class="card-body">
                <form action="/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Name" name="name" value="{{name}}" autofocus required>
                    </div>
                  
                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="E-mail" name="email" value="{{email}}"  required>
                    </div>
                  
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Password" name="password" value="{{password}}"  required>
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Reply password" name="password_check" value="{{password_check}}" required>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Register" class="btn btn-primary btn-block">
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>